@model OnlineShop.Models.Transaction
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var orderID = ViewBag.orderID;
    var total = ViewBag.total;
}

@using (Html.BeginForm("Checkout", "CheckoutClient", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    if (@Session["Partner"] != null)
    {

        <div class="form-horizontal" style="text-align: center">
            <h4>Transaction</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div>
                    <h4>Mã đơn hàng</h4>
                </div>
                <div>
                    <input type="text" name="billId" value="@orderID" />
                    @Html.ValidationMessageFor(model => model.BillId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <h4>Tên giao dịch</h4>
                </div>
                <div>
                    <input type="text" name="name" />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <h4>Số tiền giao dịch</h4>
                </div>
                <div>
                    <input type="number" name="amount" value="@total" />
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <h4>Nội dung giao dịch</h4>
                </div>
                <div>
                    <input type="text" name="content" />
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Thanh toán" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

